{
    "name": "nihikki/swoole-framework",
    "type": "project",
    "description": "Swoole framework",
    "authors": [
        {
            "name": "Roman Pustovalov",
            "email": "crawnix.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-swoole": "*",
        "psr/container": "2.0.0"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "app/",
            "Ports\\": "ports/",
            "Domain\\": "domain/",
            "Infrastructure\\": "infrastructure/",
            "Core\\": "core/"
        }
    },
    "require-dev": {
        "swoole/ide-helper": "^4.6",
        "vimeo/psalm": "4.x-dev",
        "squizlabs/php_codesniffer": "3.*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
